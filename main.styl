*
html
  margin 0
  padding 0

body
  font-size 16px
  height 100%
  width 100%
  color #444
  font-family Arial, sans-serif
  background linear-gradient(95deg, cornflowerblue, darkcyan)

.container
  margin 50px auto
  width 80%
  padding 20px
  height auto
  border-radius 5px
  background-color white

fieldset
  margin 10px
  padding 10px
  border-radius 5px
  border 1px solid #cecece

li
  list-style-type none

input
  margin-top 5px

p
  padding-top 5px

input[type=submit]
  margin 10px
  border none
  padding 10px
  outline none
  color white
  font-size 14px
  cursor pointer
  background-color #6495ed
  border-radius 5px
